<% if @article.errors.any? %>
<h2> Fix the following errors in order to create article </h2>
	<ul> 
	  <% @article.errors.full_messages.each do |msg| %>
	    <li> <%= msg %> </li>
	  <% end %>
	</ul>
<% end %>

<div>
	<div class='col-xs-10'>
		<%= form_for(@article , :html =>{class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :title %> 
 				</div>
				<div class= "col-sm-10">
					<%= f.text_field :title , class: "form-control" , placeholder: "Recommendation title" , autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :description %> 
 				</div>
				<div class= "col-sm-20">
					<%= f.text_area :description , rows: 10 ,class: "form-control headline " , placeholder: "Your recommendation" , autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2"> 
					<div class= "col-sm-20">
						<%= f.submit class: 'btn-warning btn-lg'%>
					</div>
				</div>
			</div>
		<% end %>
		[ <%= link_to "Cancel and return to recommendations" ,articles_path %> ]
	</div>
</div>
